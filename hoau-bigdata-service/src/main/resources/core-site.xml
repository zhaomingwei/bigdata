<!-- Put site-specific property overrides in this file. -->

<configuration>
        <!--指定hdfs连接地址，集群模式（高可用）-->
	<property>
		<name>fs.defaultFS</name>
		<value>hdfs://cluster</value>
	</property>
	<!--指定hadoop数据临时存放目录-->
	<property>
		<name>hadoop.tmp.dir</name>
		<value>/opt/data/hadoop</value>
	</property>
	<!-- 指定ZooKeeper集群的地址和端口-->
	<property>
		<name>ha.zookeeper.quorum</name>
		<value>10.39.250.105:2181,10.39.250.106:2181,10.39.250.107:2181</value>
		<!--<value>10.39.251.141:2181,10.39.251.122:2181,10.39.251.123:2181</value>-->
		<!--<value>192.168.192.121:2181,192.168.192.122:2181,192.168.192.123:2181</value>-->
	</property>
	<property>
		<name>ha.zookeeper.session-timeout.ms</name>
		<value>5000</value>
	</property>
</configuration>
